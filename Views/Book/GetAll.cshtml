@model IEnumerable<BookNest.Models.Domain.Book>

<div class="container pt-5">
    <div class="row mb-4">
        <div class="col-md-12 d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Books List</h3>
            <a class="btn btn-primary" href="/Book/Add">
                <i class="bi bi-plus-lg"></i> Add New Book
            </a> <!-- Button to add a new book -->
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-hover table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>Title</th> <!-- Table header for Title -->
                            <th>Genre</th> <!-- Table header for Genre -->
                            <th>ISBN</th> <!-- Table header for ISBN -->
                            <th>Total Pages</th> <!-- Table header for Total Pages -->
                            <th>Author</th> <!-- Table header for Author -->
                            <th>Publisher</th> <!-- Table header for Publisher -->
                            <th class="text-center">Actions</th> <!-- Table header for Action -->
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Title</td> <!-- Display Title -->
                                <td>@item.GenreName</td> <!-- Display Genre -->
                                <td>@item.Isbn</td> <!-- Display ISBN -->
                                <td>@item.TotalPages</td> <!-- Display Total Pages -->
                                <td>@item.AuthorName</td> <!-- Display Author -->
                                <td>@item.PublisherName</td> <!-- Display Publisher -->
                                <td class="text-center">
                                    <a class="btn btn-success btn-sm" href="/Book/Update?id=@item.Id">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a class="btn btn-danger btn-sm" onclick="return window.confirm('Are you sure you want to delete this book?')" href="/Book/Delete?id=@item.Id">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
