@model BookNest.Models.Domain.Author;

@{
}

<div class="container pt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title"><i class="bi bi-person-plus"></i> Add Author</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Add" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="AuthorName" class="form-label">Author Name *</label>
                            <input type="text" class="form-control" asp-for="AuthorName" placeholder="Enter author name" />
                            <span asp-validation-for="AuthorName" class="text-danger"></span>
                        </div>

                        @if (TempData["msg"] != null)
                        {
                            <div class="alert alert-success">
                                <i class="bi bi-check-circle"></i> @TempData["msg"]
                            </div>
                        }

                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save"></i> Save
                            </button>
                            <a href="/Author/GetAll" class="btn btn-secondary">
                                <i class="bi bi-list"></i> View All Authors
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
