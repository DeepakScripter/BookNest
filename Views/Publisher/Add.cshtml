@model BookNest.Models.Domain.Publisher
@{
}

<!-- Form to add a new publisher -->
<div class="container pt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h3 class="text-primary"><i class="bi bi-plus-circle"></i> Add Publisher</h3> <!-- Header with icon -->

            <form asp-action="Add" method="post">
                <div class="form-group mb-3">
                    <label asp-for="PublisherName" class="form-label">Publisher Name *</label> <!-- Label for PublisherName -->
                    <input type="text" class="form-control" asp-for="PublisherName" placeholder="Enter publisher name" /> <!-- Input field for PublisherName -->
                    <span asp-validation-for="PublisherName" class="text-danger"></span> <!-- Validation message for PublisherName -->
                </div>

                <!-- Display any validation message -->
                @if (TempData["msg"] != null)
                {
                    <div class="alert alert-success">@TempData["msg"]</div> <!-- Display success message -->
                }

                <div class="form-group pt-3 d-flex justify-content-between">
                    <!-- Submit and cancel buttons -->
                    <button type="submit" class="btn btn-dark"><i class="bi bi-save"></i> Save</button>
                    <a href="/Publisher/GetAll" class="btn btn-primary"><i class="bi bi-list"></i> Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
